@{
    ViewBag.Title = "PasswordRecovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row align-items-center justify-content-md-center h-p100">
    <div class="col-lg-4 col-md-8 col-12">
        <div class="login-box">
           
            <div class="login-box-body pb-20">
                <div style="margin-left:35%;">
                    <img src="~/images/logo-light.png" alt="logo" class="light-logo">
                </div>
                <p class="login-box-msg text-uppercase">Réinitialiser votre mot de passe</p>
                @using (Html.BeginForm("PasswordRecovery", "admin", null, FormMethod.Post, new { id = "form-recover-password" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group has-feedback">
                        <input type="email" class="form-control" placeholder="Adresse email" name="email" required>
                        <span class="ion ion-email form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-info btn-block text-uppercase">Réinitialiser  mot de passe</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    <span>Vous avez votre mot de passe? <a href="@Url.Action("login","admin")" class="pull-right text-danger">Connectez-vous</a></span>
                    
                }
            </div>
            <!-- /.login-box-body -->
        </div>
        <!-- /.login-box -->

    </div>
</div>

